<%= form_for(@shop) do |f| %>
  <%= f.label :name, "店舗名" %>
  <%= f.text_field :name %>
  <%= f.label :住所 %>
  <%= f.text_area :address, autofocus: true %>
  <%= f.label :phone_number, "電話番号" %>
  <%= f.text_field :phone_number %>
  <%= f.label :shop_image, "らーめん画像" %>
  <%= f.attachment_field :shop_image %>
  <%= f.label :comment, "コメント" %>
  <%= f.text_area :comment %>
  <%= f.submit %>
<% end %>
